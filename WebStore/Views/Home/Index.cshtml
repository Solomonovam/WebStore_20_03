@using WebStore.Infrastructure.Interfaces


<partial name="Partial/_Slider" />

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" />
            </div>

            <div class="col-sm-9 padding-right">

                @inject IProductData catalog;
                @{
                    var products = catalog.GetProducts().Select(p =>
                    new ProductViewModel { 
                        Id = p.Id,
                        Name = p.Name,
                        Order = p.Order,
                        ImageUrl = p.ImageUrl,
                        Price  = p.Price
                    });


                }

                <partial name="Partial/_FeaturesItems" />
                <partial name="Partial/_CategoryTab" />
                <partial name="Partial/_RecommendedItems" />
            </div>

        </div>
    </div>
</section>

